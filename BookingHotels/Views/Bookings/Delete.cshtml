@model BookingHotels.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: auto;
        margin-top: 40px;
        text-align: center;
    }

    h1 {
        color: #dc3545;
        font-weight: bold;
    }

    h3 {
        color: #343a40;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .details-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
        border-left: 4px solid #007bff;
        text-align: left;
    }

        .details-card dt {
            font-weight: bold;
            color: #343a40;
        }

        .details-card dd {
            margin-bottom: 10px;
            color: #555;
        }

    
    .btn-danger {
        background: #dc3545;
        border: none;
        padding: 12px;
        font-size: 18px;
        width: 100%;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s;
        color: white;
        text-transform: uppercase;
    }

        .btn-danger:hover {
            background: #c82333;
            transform: translateY(-2px);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

   
    .btn-secondary {
        background: #007bff;
        border: none;
        padding: 12px;
        font-size: 16px;
        width: 100%;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s;
        color: white;
        margin-top: 10px;
    }

        .btn-secondary:hover {
            background: #0056b3;
            transform: translateY(-2px);
        }
</style>


<div class="container">
    <h1><i class="fas fa-exclamation-triangle"></i> Delete Booking</h1>
    <h3>Are you sure you want to delete this booking?</h3>

 
    <div class="details-card">
        <dl class="row">
            <dt class="col-sm-4">Customer</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Customer.FirstName) @Html.DisplayFor(model => model.Customer.LastName)</dd>

            <dt class="col-sm-4">Branch</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Branch.BranchName)</dd>

            <dt class="col-sm-4">Check In Date</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CheckInDate)</dd>

            <dt class="col-sm-4">Check Out Date</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.CheckOutDate)</dd>

            <dt class="col-sm-4">Discount</dt>
            <dd class="col-sm-8">
                @if (Model.Discount > 0)
                {
                    <span style="color: #28a745; font-weight: bold;">@Model.Discount%</span>
                }
                else
                {
                    <span style="color: #dc3545;">No Discount</span>
                }
            </dd>
        </dl>
    </div>

  
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingID" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete Booking</button>
    </form>

    
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
</div>
