@model BookingHotels.Models.HotelBranch

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-2xl font-bold mb-4">Create Hotel Branch</h1>

<div class="card shadow-sm p-4 rounded">
    <h4 class="text-lg font-semibold mb-3">Branch Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="BranchName" class="form-label"></label>
                    <input asp-for="BranchName" class="form-control" />
                    <span asp-validation-for="BranchName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
