@model BookingHotels.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}


<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
        margin-top: 40px;
    }

    h1 {
        color: #dc3545;
        font-weight: bold;
        text-align: center;
    }

    h3 {
        text-align: center;
        color: #343a40;
        font-size: 18px;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        color: #343a40;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        font-size: 16px;
    }

    .btn-danger, .btn-secondary {
        padding: 12px;
        font-size: 16px;
        width: 100%;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s;
        text-transform: uppercase;
        margin-top: 10px;
    }

    .btn-danger {
        background: #dc3545;
        border: none;
        color: white;
    }

        .btn-danger:hover {
            background: #c82333;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: white;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }

    dl.row dt {
        font-weight: bold;
        color: #343a40;
    }

    dl.row dd {
        color: #495057;
    }
</style>


<div class="container">
    <h1><i class="fas fa-trash-alt"></i> Delete Customer</h1>
    <h3>Are you sure you want to delete this customer?</h3>
    <hr />

    <dl class="row">
        <dt class="col-sm-4">National Number</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.NationalNumber)</dd>

        <dt class="col-sm-4">First Name</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

        <dt class="col-sm-4">Last Name</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

        <dt class="col-sm-4">Phone Number</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Confirm Delete</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Cancel</a>
</div>
