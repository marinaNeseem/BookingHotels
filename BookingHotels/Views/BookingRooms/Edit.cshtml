@model BookingHotels.Models.BookingRoom

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-2xl font-bold mb-4">Edit Booking Room</h1>

<div class="card shadow-sm p-4 rounded">
    <h4 class="text-lg font-semibold mb-3">Booking Room Details</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />

                <div class="form-group mb-3">
                    <label asp-for="BookingID" class="form-label"></label>
                    <select asp-for="BookingID" class="form-control" asp-items="ViewBag.BookingID"></select>
                    <span asp-validation-for="BookingID" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TypeID" class="form-label"></label>
                    <select asp-for="TypeID" class="form-control" asp-items="ViewBag.TypeID"></select>
                    <span asp-validation-for="TypeID" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NumberOfAdults" class="form-label"></label>
                    <input asp-for="NumberOfAdults" class="form-control" />
                    <span asp-validation-for="NumberOfAdults" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NumberOfChildren" class="form-label"></label>
                    <input asp-for="NumberOfChildren" class="form-control" />
                    <span asp-validation-for="NumberOfChildren" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
