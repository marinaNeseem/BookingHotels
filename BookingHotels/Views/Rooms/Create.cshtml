@model BookingHotels.Models.Room

@{
    ViewData["Title"] = "Create Room";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: auto;
        margin-top: 40px;
    }

    h1 {
        color: #007bff;
        font-weight: bold;
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            font-weight: bold;
            color: #343a40;
            display: block;
        }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
    }

    .btn-primary, .btn-secondary {
        padding: 12px;
        font-size: 16px;
        width: 100%;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s;
        text-transform: uppercase;
        margin-top: 10px;
    }

    .btn-primary {
        background: #007bff;
        border: none;
        color: white;
    }

        .btn-primary:hover {
            background: #0056b3;
            transform: translateY(-2px);
        }

    .btn-secondary {
        background: #6c757d;
        border: none;
        color: white;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-2px);
        }
</style>

<div class="container">
    <h1><i class="fas fa-bed"></i> Create Room</h1>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Type" class="control-label">Room Type</label>
            <input asp-for="Type" class="form-control" placeholder="Enter Room Type (e.g., Deluxe, Suite, Standard)" />
            <small class="form-text text-muted">Specify the type of room.</small>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Create</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
