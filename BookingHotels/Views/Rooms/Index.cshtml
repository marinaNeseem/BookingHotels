@model IEnumerable<BookingHotels.Models.Room>

@{
    ViewData["Title"] = "Room List";
}


<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Poppins', sans-serif;
    }

    .container {
        background: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin: auto;
        margin-top: 40px;
    }

    h1 {
        color: #007bff;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-success {
        background: #28a745; 
        border: none;
        color: white;
        padding: 10px 15px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s;
        text-transform: uppercase;
    }

        .btn-success:hover {
            background: #218838;
            transform: translateY(-2px);
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table thead {
            background-color: #007bff;
            color: white;
        }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

    .action-links a {
        margin: 0 5px;
        text-decoration: none;
        font-weight: bold;
    }

    .edit {
        color: #28a745;
    }

    .details {
        color: #17a2b8;
    }

    .delete {
        color: #dc3545;
    }
</style>

<div class="container">
    <h1><i class="fas fa-bed"></i> Room List</h1>

    <p>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Create New Room</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Room Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="edit">
                            <i class="fas fa-edit"></i> Edit
                        </a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="details">
                            <i class="fas fa-info-circle"></i> Details
                        </a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
